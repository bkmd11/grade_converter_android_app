#kivy 1.11.1
<GradeCalc>
    id: calculator
    display: grade_input
    result: grade_output
    BoxLayout:
        orientation: "vertical"
        padding: 2

        BoxLayout:
            orientation: "vertical"
            size_hint: (1, .65)
            Label:
                id: grade_output
                canvas.before:
                    Color:
                        rgb: .95, .95, .95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: ""
                font_size: .5 * self.height
                text_size: self.size
                color: 0, 0, 0, 1
                halign: "center"
                valign: "center"
            Label:
                id: grade_input
                canvas.before:
                    Color:
                        rgb: .95, .95, .95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: ""
                font_size: .5 * self.height
                text_size: self.size
                color: 0, 0, 0, 1
                halign: "right"
                valign: "center"
        GridLayout:
            id: numbers
            cols: 3
            rows: 5
            spacing: 2
            padding: 2
            size: root.width, root.height/2
            center_x: root.width/3
            center_y: root.height/2.5

            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "1"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "2"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "3"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "4"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "5"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "6"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "7"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "8"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "9"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "."
                color: 1, .9, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "0"
                color: 1, .7, 0, 1
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: 0, .3, .9, 1
                font_size: .75 * self.height
                text: "<="
                color: 1, .7, 0, 1
                on_press: calculator.backspace_button(grade_input.text)
        Button:
            id: calculate
            background_normal: ""
            background_color: 1, .7, 0, 1
            font_size: .75 * self.height
            size_hint: (1, .35)
            text: "Calculate"
            color: 0, .3, .9, 1
            on_press: calculator.calculate_button(grade_input.text)